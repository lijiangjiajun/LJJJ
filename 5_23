1.
#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int fox(int i )
{
	int j;
	for (j = 2; j <= sqrt(i); j++)
	{
		if (i%j == 0)
		{
			return 0;
		}

	}
	return 1;
}
int main()
{
	int i=0;
	int a=0;
	scanf("%d", &i);
	a = fox(i);
	if (a == 1)
	{
		printf("%d是素数 ", i);
	}
	else
		printf("%d不是素数 ", i);
	system("pause");
	return 0;
}

2.
#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void reverse(int* p, int a)
{
	int i;
	int tmp;
	for (i = 0; i <a / 2; i++)
	{
		tmp = *(p + i);
		*(p + i) = *(p + a - i - 1);
		*(p + a - i - 1) = tmp;
	}
}

int main()
{
	int a[10] = { 1, 2, 3, 4, 5, 6, 6, 7, 8, 8 };
	int i;
	int sz;
	sz = sizeof(a) / sizeof(a[0]);
	reverse(a, sz);
	for (i = 0; i <= 9; i++)
	{
		printf("a[%d]=%d ", i, a[i]);
	}
	system("pause");
	return 0;
}


3.

#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <stdlib.h>

void empty(int* p,int sz)
{
	int i;
	for (i = 0; i <= sz - 1;i++)
	{
		*(p + i) = 0;
	}
}

int main()
{
	char a[10] = { 1, 2, 3, 4, 5, 6, 6, 7, 8, 8 };
	int i;
	int sz;
	sz = sizeof(a) / sizeof(a[0]);
	for (i = 0; i <= 9; i++)
	{
		printf("a[%d]=%d ", i, a[i]);
	}
	printf("\n");
	empty(a,sz);
	for (i = 0; i <= 9; i++)
	{
		printf("a[%d]=%d ", i, a[i]);
	}
	system("pause");
	return 0;
}
